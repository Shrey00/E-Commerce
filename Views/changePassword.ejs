            <form method='POST' action='/changePassword' enctype="application/x-www-form-urlencoded">
                <input onkeyup="clear()" id='newPassword' class="h-8 p-2 w-80 mt-6 ml-20 border-[2px] rounded-full focus:outline-none focus:border-green-300
                " type='password' name='newPassword' placeholder='New Password' required />
                <input id='confirmPassword'
                    class="h-8 p-2 w-80 mt-6 ml-20 border-[2px] rounded-full focus:outline-none focus:border-green-300"
                    type='password' name='confirmPassword' placeholder='Confirm Password' onkeyup="checkEquality()"
                    required />
                <p id='matchError' class="text-red-600 text-center"></p>
                <p id='matchSuccess' class="text-green-700 text-center"></p>
                <div class='flex justify-center'>
                    <div class='block'>
                        <button id='submitKaro' type='submit' class='bg-green-300 px-8 py-2 rounded-md my-4'>Change
                            Password</button>
                    </div>
                </div>
            </form>

            <div>
                
                <p class="text-center">Go back to home page</p>
                <div class='flex justify-center'>
                    <a href="http://localhost:5000/home"><button id='signup'
                            class='bg-green-300 px-2 rounded-md '>Home</button></a>
                </div>
            </div>
        </div>
    </div>
    </div>
    <script>
        function checkEquality() {
            var newP = document.getElementById('newPassword').value;
            var confirmP = document.getElementById('confirmPassword').value;

            if (newP != confirmP) {
                document.getElementById('matchSuccess').innerText = "";
                document.getElementById('matchError').innerText = "Password do not match";
            }
            else {
                document.getElementById('matchSuccess').innerText = "Password matched";
                document.getElementById('matchError').innerText = "";
            }if(confirmP == "") {
                document.getElementById('matchSuccess').innerText = "";
                document.getElementById('matchError').innerText = "";
            }
        }
        //     function checkPass(){
